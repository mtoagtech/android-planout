<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_cityname"
        style="@style/regular_helvetica_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_arrow_fwd"
        android:drawablePadding="@dimen/margin_30"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/margin_20"
        android:paddingVertical="@dimen/margin_20"
        android:singleLine="true"
        android:text="@string/company"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        app:layout_constraintTop_toBottomOf="@id/txt_cityname"
        android:background="@color/gray_E7_48" />



</androidx.constraintlayout.widget.ConstraintLayout>