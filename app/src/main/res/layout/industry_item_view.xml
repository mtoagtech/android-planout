<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/industryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beach_bar"
        style="@style/bold_helvetica_18dp"
        android:layout_marginHorizontal="@dimen/margin_10"
        android:padding="@dimen/margin_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/beachbar_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_more"
        style="@style/bold_helvetica_12dp"
        android:layout_marginHorizontal="@dimen/margin_10"
        android:padding="@dimen/margin_5"
        android:textColor="@color/app_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/industryName"
        app:layout_constraintBottom_toBottomOf="@+id/industryName"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerBeach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/industryName"
        android:paddingStart="@dimen/margin_5"
        android:paddingEnd="@dimen/margin_5"
        android:clipToPadding="false"
        android:layout_marginTop="@dimen/margin_5"/>
</androidx.constraintlayout.widget.ConstraintLayout>