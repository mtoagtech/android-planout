<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    app:behavior_hideable="false"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_top_round_bottom_drawable"
        android:orientation="vertical"
        android:paddingVertical="@dimen/margin_10">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_dates"
                android:layout_marginVertical="@dimen/margin_10"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/bold_helvetica_16dp"/>

            <ImageView
                android:id="@+id/imgTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_15"
                android:src="@drawable/ic_icon_cancel"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/selected_aria"
            android:paddingTop="@dimen/margin_10"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margin_5">

                <TextView
                    style="@style/regular_helvetica_12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/from" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/from"
                    android:id="@+id/from_dialog"
                    android:layout_marginTop="@dimen/margin_8"
                    style="@style/bold_helvetica_16dp"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_F4_48"/>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margin_5">

                <TextView
                    style="@style/regular_helvetica_12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/to" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/to"
                    android:id="@+id/to_dialog"
                    android:layout_marginTop="@dimen/margin_8"
                    style="@style/bold_helvetica_16dp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_F4_48"
            android:layout_marginTop="@dimen/margin_10"/>

        <com.andrewjapar.rangedatepicker.CalendarPicker
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0"
            android:layout_marginTop="@dimen/margin_10"
            android:clipToPadding="false"
            app:reverseLayout="true"
            app:pickerType="range"
            android:layout_weight="1"
            android:scrollbarStyle="outsideOverlay"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_line" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtClear"
                style="@style/bold_helvetica_14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/margin_10"
                android:text="@string/clear_all"
                android:layout_marginStart="@dimen/margin_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/apply_dates"
                app:layout_constraintBottom_toBottomOf="@id/apply_dates"/>

            <Button
                android:id="@+id/apply_dates"
                style="@style/bold_helvetica_14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginHorizontal="@dimen/margin_15"
                android:paddingHorizontal="@dimen/margin_30"
                android:paddingVertical="@dimen/margin_12"
                android:textSize="16dp"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/bg_round_btn_drawable"
                app:backgroundTint="@color/app_green"
                android:text="@string/apply_dates"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAllCaps="false"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>