<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Months package"
        style="@style/bold_helvetica_14dp"
        android:layout_marginStart="@dimen/margin_15"
        app:layout_constraintEnd_toStartOf="@+id/txtAmount"
        android:layout_marginEnd="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currency"
        style="@style/bold_helvetica_14dp"
        android:textColor="@color/app_red"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_15"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="00 Xxx 0000, 0:00 XX"
        style="@style/regular_helvetica_14dp"
        android:textSize="@dimen/margin_13"
        android:textColor="@color/gray_96_96"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginStart="@dimen/margin_15"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin_15"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@color/gray_E7_48"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginHorizontal="@dimen/margin_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtSubTitle"/>
</androidx.constraintlayout.widget.ConstraintLayout>