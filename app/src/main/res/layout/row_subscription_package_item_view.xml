<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="@dimen/margin_7"
        android:layout_marginHorizontal="@dimen/margin_10"
        app:cardCornerRadius="@dimen/margin_4"
        app:cardElevation="@dimen/margin_3"
        android:outlineAmbientShadowColor="@color/gray_B2_5B"
        android:outlineSpotShadowColor="@color/gray_B2_5B"
        app:cardBackgroundColor="@color/gray_FF_14">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_FF_14"
            android:paddingVertical="@dimen/margin_5">

            <TextView
                android:id="@+id/packMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/regular_helvetica_14dp"
                android:text="3 Months"
                android:layout_marginTop="@dimen/margin_7"
                android:layout_marginStart="@dimen/margin_15"
                app:layout_constraintTop_toTopOf="@+id/btnBuyNow"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/packAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/bold_helvetica_20dp"
                android:text="â‚¬5"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginStart="@dimen/margin_15"
                app:layout_constraintTop_toBottomOf="@+id/packMonth"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/packActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/regular_helvetica_14dp"
                android:textSize="@dimen/margin_13"
                android:text="@string/active"
                android:textColor="@color/app_parrot"
                android:background="@drawable/bg_parrot_drawable"
                android:paddingHorizontal="@dimen/margin_10"
                android:paddingVertical="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginStart="@dimen/margin_30"
                app:layout_constraintTop_toTopOf="@+id/packMonth"
                app:layout_constraintTop_toBottomOf="@+id/packMonth"
                app:layout_constraintStart_toEndOf="@+id/packMonth"/>

            <TextView
                android:id="@+id/btnBuyNow"
                style="@style/bold_helvetica_14dp"
                android:layout_width="@dimen/margin_120"
                android:textSize="@dimen/dimen_12"
                android:paddingVertical="@dimen/margin_18"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_marginHorizontal="@dimen/margin_15"
                android:background="@drawable/bg_round_btn_green_drawable"
                android:text="@string/buy_now"
                android:gravity="center"
                android:textColor="@color/white"
                android:paddingHorizontal="@dimen/margin_20"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_15"
                app:layout_constraintTop_toBottomOf="@+id/packAmount"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/packOfferPercentOff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/bold_helvetica_14dp"
                    android:text="10% OFF"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/margin_15"
                    android:paddingEnd="@dimen/margin_15"
                    android:background="@drawable/ic_bg_pack_off"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/packOfferExpireDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/regular_helvetica_12dp"
                    android:text="Offer expires in 25 days"
                    android:textColor="@color/gray_96_96"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>