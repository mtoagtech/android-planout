<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_FF_14"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/headingLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_E2_48"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/arrivedText"
                    style="@style/bold_helvetica_12dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:paddingVertical="@dimen/margin_10"
                    android:singleLine="true"
                    android:text="@string/arrived" />

                <TextView
                    style="@style/bold_helvetica_12dp"
                    android:layout_width="@dimen/margin_120"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:paddingVertical="@dimen/margin_10"
                    android:singleLine="true"
                    android:text="@string/status" />

                <TextView
                    style="@style/bold_helvetica_12dp"
                    android:layout_width="@dimen/margin_150"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:paddingVertical="@dimen/margin_10"
                    android:singleLine="true"
                    android:text="@string/name" />

                <TextView
                    style="@style/bold_helvetica_12dp"
                    android:layout_width="@dimen/margin_150"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:paddingVertical="@dimen/margin_10"
                    android:singleLine="true"
                    android:text="@string/reservation_no" />

                <TextView
                    style="@style/bold_helvetica_12dp"
                    android:layout_width="@dimen/margin_150"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:paddingVertical="@dimen/margin_10"
                    android:singleLine="true"
                    android:text="@string/mobile_no" />

                <TextView
                    style="@style/bold_helvetica_12dp"
                    android:layout_width="@dimen/margin_120"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:paddingVertical="@dimen/margin_10"
                    android:singleLine="true"
                    android:text="@string/no_of_people_cap" />

                <TextView
                    style="@style/bold_helvetica_12dp"
                    android:layout_width="@dimen/margin_180"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:paddingVertical="@dimen/margin_10"
                    android:singleLine="true"
                    android:text="@string/date_time" />

                <TextView
                    style="@style/bold_helvetica_12dp"
                    android:layout_width="@dimen/margin_120"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:paddingVertical="@dimen/margin_10"
                    android:singleLine="true"
                    android:text="@string/table_no" />

                <TextView
                    style="@style/bold_helvetica_12dp"
                    android:layout_width="@dimen/margin_150"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:paddingVertical="@dimen/margin_10"
                    android:singleLine="true"
                    android:text="@string/indoors_outdoors" />

                <TextView
                    style="@style/bold_helvetica_12dp"
                    android:layout_width="@dimen/margin_100"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:paddingVertical="@dimen/margin_10"
                    android:singleLine="true"
                    android:text="@string/age" />

                <TextView
                    style="@style/bold_helvetica_12dp"
                    android:layout_width="@dimen/margin_200"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:paddingVertical="@dimen/margin_10"
                    android:singleLine="true"
                    android:text="@string/extra_notes_cap" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/mainView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:paddingVertical="@dimen/margin_10">

                <LinearLayout
                    android:id="@+id/viewArrived"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"


                    >

                    <com.zcw.togglebutton.ToggleButton
                        android:id="@+id/switchArrived"
                        android:layout_width="@dimen/margin_35"
                        android:layout_height="@dimen/margin_20"
                        android:gravity="center"
                        app:tbAsDefaultOn="false"
                        app:tbOffBorderColor="@color/gray_E2_48"
                        app:tbOffColor="@color/gray_E2_48"
                        app:tbOnColor="@color/app_green"
                        app:tbSpotColor="@color/white" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="@dimen/margin_120"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtStatus"
                        style="@style/regular_helvetica_12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_10"
                        android:background="#faf4f0"
                        android:drawableEnd="@drawable/ic_arrow_down_short"
                        android:drawablePadding="@dimen/margin_10"
                        android:gravity="center|start"
                        android:paddingHorizontal="@dimen/margin_10"
                        android:paddingVertical="@dimen/margin_10"
                        android:singleLine="true"
                        android:text="STATUS"
                        android:textColor="#f57603" />

                    <TextView
                        android:id="@+id/reasion"
                        style="@style/regular_helvetica_10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_10"
                        android:gravity="center|start"
                        android:paddingVertical="@dimen/margin_5"
                        android:singleLine="true"
                        android:text="STATUS"
                        android:textColor="#F04B69"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtName"
                    style="@style/regular_helvetica_14dp"
                    android:layout_width="@dimen/margin_150"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:paddingVertical="@dimen/margin_10"
                    android:singleLine="true"
                    android:text="NAME" />

                <TextView
                    android:id="@+id/txtReservation"
                    style="@style/regular_helvetica_14dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:paddingVertical="@dimen/margin_10"
                    android:singleLine="false"
                    android:text="Reservation no." />

                <TextView
                    android:id="@+id/txtMobile"
                    style="@style/regular_helvetica_14dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:paddingVertical="@dimen/margin_10"
                    android:singleLine="true"
                    android:text="Mobile no." />

                <TextView
                    android:id="@+id/txtPeople"
                    style="@style/regular_helvetica_14dp"
                    android:layout_width="@dimen/margin_120"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:paddingVertical="@dimen/margin_10"
                    android:singleLine="true"
                    android:text="NO OF PEOPLE" />

                <TextView
                    android:id="@+id/txtTime"
                    style="@style/regular_helvetica_14dp"
                    android:layout_width="@dimen/margin_180"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:paddingVertical="@dimen/margin_10"
                    android:singleLine="true"
                    android:text="TIME" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/showTable"
                    android:layout_width="@dimen/margin_120"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtTableNo"
                        style="@style/regular_helvetica_14dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:paddingHorizontal="@dimen/margin_10"
                        android:paddingVertical="@dimen/margin_10"
                        android:singleLine="true"
                        android:text="TABLE NO"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/editTableNo"
                        android:layout_width="@dimen/margin_15"
                        android:layout_height="@dimen/margin_15"
                        android:src="@drawable/baseline_mode_edit_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/txtTableNo"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/black_white" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/EditTable"
                    android:layout_width="@dimen/margin_120"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/edttxtTableNo"
                        style="@style/regular_helvetica_14dp"
                        android:layout_width="@dimen/margin_100"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_round_edit_drawable_table"
                        android:gravity="center|start"
                        android:inputType="number"
                        android:maxLength="3"
                        android:paddingHorizontal="@dimen/margin_10"
                        android:paddingVertical="@dimen/margin_10"
                        android:singleLine="true"
                        android:text="TABLE NO"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/saveTableNo"
                        android:layout_width="@dimen/margin_15"
                        android:layout_height="@dimen/margin_15"
                        android:src="@drawable/ic_check_white_48dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/edttxtTableNo"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/black_white" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/txtType"
                    style="@style/regular_helvetica_14dp"
                    android:layout_width="@dimen/margin_150"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:paddingVertical="@dimen/margin_10"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/txtAgeGroup"
                    style="@style/regular_helvetica_14dp"
                    android:layout_width="@dimen/margin_100"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:paddingVertical="@dimen/margin_10"
                    android:singleLine="true"
                    android:text="AGE" />

                <TextView
                    android:id="@+id/txtExtraNotes"
                    style="@style/regular_helvetica_14dp"
                    android:layout_width="@dimen/margin_200"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:maxLines="2"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:paddingVertical="@dimen/margin_10"
                    android:singleLine="false"
                    android:text="EXTRA NOTES" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_B2" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>