<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/imgCard"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="@dimen/margin_4"
        app:cardBackgroundColor="@color/background_color"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="@dimen/margin_0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/margin_5"
        android:layout_marginVertical="@dimen/margin_5">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/mediaImage"/>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_icon_cancel"
        android:elevation="@dimen/margin_2"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="-5dp"
        app:layout_constraintTop_toTopOf="@+id/imgCard"
        app:layout_constraintEnd_toEndOf="@+id/imgCard"/>
</androidx.constraintlayout.widget.ConstraintLayout>