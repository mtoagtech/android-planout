<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_350"
        android:background="@drawable/img_bg_visitor_home"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgSavedSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_50"
        android:padding="@dimen/margin_5"
        android:src="@drawable/ic_img_saved_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editSearching"
        android:layout_width="@dimen/margin_0"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_12"
        style="@style/editText_helvetica_regular"
        android:background="@drawable/bg_home_search_drawable"
        android:drawableStart="@drawable/ic_img_search"
        android:drawableTint="@color/black"
        android:drawablePadding="@dimen/margin_10"
        android:hint="@string/restaurant_club_bar"
        android:paddingHorizontal="@dimen/margin_15"
        android:paddingVertical="@dimen/margin_13"
        android:singleLine="true"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="@+id/imgSavedSearch"
        app:layout_constraintEnd_toStartOf="@+id/imgFavorites"
        app:layout_constraintStart_toEndOf="@+id/imgSavedSearch"
        app:layout_constraintTop_toTopOf="@+id/imgSavedSearch" />

    <ImageView
        android:id="@+id/imgFavorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_50"
        android:layout_marginEnd="@dimen/margin_20"
        android:padding="@dimen/margin_5"
        android:src="@drawable/ic_icon_fav_day_night"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/bold_helvetica_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_80"
        android:gravity="center"
        android:text="@string/explore_and_reserve"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/editSearching" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0"
        android:id="@+id/dataAria"
        android:fillViewport="true"
        android:layout_marginTop="@dimen/margin_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editSearching">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/bg_home_top_round_drawable"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_180"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt1"
                    style="@style/bold_helvetica_20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_30"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/popular_industries" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerIndustry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginHorizontal="@dimen/margin_10"
                    app:layout_constraintTop_toBottomOf="@+id/txt1"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerIndustryDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/margin_20"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerIndustry" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/trendingView"
                    android:visibility="gone"
                    android:background="@color/gray_D9_18"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/industryName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/trending_now"
                        style="@style/bold_helvetica_18dp"
                        android:layout_marginHorizontal="@dimen/margin_10"
                        android:padding="@dimen/margin_5"
                        android:layout_marginTop="@dimen/margin_10"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerRestro2"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt2"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingHorizontal="@dimen/margin_5"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerRestro2">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10">

                        <TextView
                            android:id="@+id/txt4"
                            style="@style/bold_helvetica_18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_10"
                            android:layout_marginTop="@dimen/margin_15"
                            android:padding="@dimen/margin_5"
                            android:text="@string/upcoming_events"
                            android:textColor="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/upcoming_more"
                            style="@style/bold_helvetica_12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_10"
                            android:padding="@dimen/margin_5"
                            android:text="@string/show_more"
                            android:textColor="@color/white"
                            app:layout_constraintBottom_toBottomOf="@+id/txt4"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/txt4" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerUpcoming"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:clipToPadding="false"
                        android:paddingEnd="@dimen/margin_15"
                        android:layout_marginBottom="@dimen/margin_30"
                        app:layout_constraintTop_toBottomOf="@+id/recyclerRestro1" />

                </LinearLayout>

                <com.github.ybq.android.spinkit.SpinKitView
                    android:padding="@dimen/margin_10"
                    android:id="@+id/loadView"
                    style="@style/SpinKitView.Circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:SpinKit_Color="@color/app_green"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>