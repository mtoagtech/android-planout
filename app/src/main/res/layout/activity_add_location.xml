<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".activities.AddLocationActivity">

    <include
        android:id="@+id/includ"
        layout="@layout/header_normal_view"/>

    <LinearLayout
        android:id="@+id/linBtnAddLoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_16"
        android:background="@color/app_green"
        android:backgroundTint="@color/app_green"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/includ">

        <TextView
            android:id="@+id/locAdd"
            style="@style/bold_helvetica_14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_15"
            android:layout_marginHorizontal="@dimen/margin_15"
            android:drawableStart="@drawable/ic_plus_add"
            android:drawablePadding="@dimen/margin_10"
            android:text="@string/add_location"
            android:textColor="@color/white" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerAddLocList"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginHorizontal="@dimen/margin_15"
        app:layout_constraintTop_toBottomOf="@+id/linBtnAddLoc"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>