<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_FF_14"
        android:paddingVertical="@dimen/margin_5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/packMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bold_helvetica_16dp"
            android:text="Plan10"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginStart="@dimen/margin_15"
            app:layout_constraintTop_toTopOf="@+id/btnApply"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/packAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/regular_helvetica_14dp"
            android:text="Get 10% off"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginStart="@dimen/margin_15"
            app:layout_constraintBottom_toBottomOf="@id/btnApply"
            app:layout_constraintTop_toBottomOf="@+id/packMonth"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btnApply"
            style="@style/bold_helvetica_14dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_40"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginHorizontal="@dimen/margin_15"
            android:background="@drawable/bg_round_btn_drawable"
            app:backgroundTint="@color/app_green"
            android:text="@string/apply"
            android:textColor="@color/white"
            android:paddingHorizontal="@dimen/margin_40"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_2"
            android:layout_marginEnd="@dimen/margin_15"
            app:layout_constraintTop_toBottomOf="@+id/btnApply"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/packOfferPercentOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/bold_helvetica_14dp"
                android:text="10% OFF"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/margin_15"
                android:visibility="invisible"
                android:background="@drawable/ic_bg_pack_off"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/packOfferExpireDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/regular_helvetica_12dp"
                android:text="Expire in 90 days"
                android:layout_marginEnd="@dimen/margin_10"
                android:textColor="@color/gray_96_96"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>